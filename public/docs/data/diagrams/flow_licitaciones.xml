<diagram type="flowchart" id="flow-licitaciones" title="Gestión de Licitaciones">
  <metadata>
    <description>Ciclo completo desde creación por Principal hasta adjudicación.</description>
    <module>Licitaciones</module>
  </metadata>
  <roles>
    <role id="principal" name="Principal" color="#3b82f6"/>
    <role id="admin" name="Administrador" color="#ef4444"/>
    <role id="sistema" name="Sistema" color="#6b7280"/>
  </roles>
  <nodes>
    <node id="start" type="start" x="100" y="50" label="Crear Licitación" role="principal"/>
    <node id="validate" type="decision" x="100" y="150" label="¿Datos Válidos?" role="sistema"/>
    <node id="publish" type="process" x="100" y="250" label="Publicar" role="principal"/>
    <node id="review" type="process" x="300" y="250" label="Supervisar" role="admin"/>
    <node id="end" type="end" x="100" y="350" label="Licitación Activa" role="sistema"/>
  </nodes>
  <connections>
    <connect from="start" to="validate"/>
    <connect from="validate" to="publish" label="Sí"/>
    <connect from="publish" to="end"/>
    <connect from="publish" to="review"/>
  </connections>
</diagram>
